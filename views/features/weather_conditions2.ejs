<%-include("../header.ejs")%>

<div>
    <div class="vertical_navbar">
        <div class="avn"><a href="/crop_health_monitoring" class="anv">Monitor</a></div>
        <div class="avn"><a href="/weather_conditions" class="anv">Weather</a></div>
        <div class="cvn"><a href="/track_soil" class="anv">Soil Track</a></div>
        <div class="dvn"><a href="/dashboard" class="anv">Dashboard</a></div>
    </div>
    <div class="weather-results">
        <h3 style="margin-bottom: 30px;">Weather conditions</h3>
        <h3><%=result.city.name%> City</h3><br>
        <%var day = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"]%>
        <%var cnt = new Date().getDay();%>
        <%result.list.forEach(function(i){%>
            <div class="weather-content">
                <p style="margin: 0 0 30px 0;"><%=day[cnt]%></p>
                <%cnt = cnt - 1;%>
                <%if(cnt == -1){cnt = 6}%>
                <p style="margin: 0;">Current temperature : <%=parseInt(i.main.temp - 273)%> deg C</p><br>
                <p style="margin: 0;">Climate : <%=i.weather[0].description%></p><br>
                <p style="margin: 0;">Min temperature : <%=parseInt(i.main.temp_min - 273)%> deg C</p><br>
                <p style="margin: 0;">Max temperature : <%=parseInt(i.main.temp_max - 273)%> deg C</p>
            </div>
        <%})%>
    </div>
</div>

<%-include("../footer.ejs")%>